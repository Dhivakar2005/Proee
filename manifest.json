{
  "manifest_version": 3,
  "name": "Proee - Productivity Assistant",
  "version": "1.0",
  "description": "Block distractions and stay focused on valuable educational content.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon48.png",
      "128": "icons/icon128.jpg"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon48.png",
      "128": "icons/icon128.jpg"
  }
}
